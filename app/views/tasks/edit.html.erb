<h1>Edit task</h1>

<%= form_with model: @task, url: task_path(@task), method: :patch do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div>
    <%= f.submit "Update task" %>
  </div>
<% end %>

<%= link_to "Back to list", tasks_path %>