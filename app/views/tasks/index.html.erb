<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%# checkbox “visuel” simple, pas besoin d’icônes pour l’instant %>
      <% if task.completed? %>
        [x]
      <% else %>
        [ ]
      <% end %>

      <%= link_to task.title, task_path(task) %>
      |
      <%= link_to "Edit", edit_task_path(task) %>
      |
      <%= link_to "Delete",
                  task_path(task),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>